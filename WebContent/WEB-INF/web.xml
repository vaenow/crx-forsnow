<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app id="WebApp_ID">
	<display-name>Snow</display-name>

	<servlet>
		<servlet-name>Demo</servlet-name>
		<display-name>DemoServlet</display-name>
		<servlet-class>com.snowdream.servlet.Demo</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Discuss</servlet-name>
		<display-name>Discuss</display-name>
		<servlet-class>com.snowdream.servlet.DiscussServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Message</servlet-name>
		<display-name>Message</display-name>
		<servlet-class>com.snowdream.servlet.MessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Demo</servlet-name>
		<url-pattern>/demo</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Discuss</servlet-name>
		<url-pattern>/discuss</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Message</servlet-name>
		<url-pattern>/msg</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>/demo</welcome-file>
	</welcome-file-list>
</web-app>
